<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PotionPanic.Views.MenuPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:resources="clr-namespace:PotionPanic.Resources"
    Title="{x:Static resources:AppResources.Title}">

    <VerticalStackLayout Spacing="16" Padding="16">
        <Label x:Name="TitleLabel" FontSize="28" FontAttributes="Bold" />
        <Button x:Name="StartBtn"     Clicked="StartBtn_Clicked"/>
        <Button x:Name="ChallengeBtn" Clicked="ChallengeBtn_Clicked"/>
        <Button x:Name="ResultsBtn"   Clicked="ResultsBtn_Clicked"/>

        <HorizontalStackLayout Spacing="8" Margin="0,24,0,0">
            <Label x:Name="LangLabel" />
            <Switch x:Name="LangSwitch" Toggled="LangSwitch_Toggled"/>
            <Label x:Name="LangCodesLabel" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>
